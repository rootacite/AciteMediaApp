@inherits LayoutComponentBase
@using MudBlazor
@using MudBlazor.Services

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />
<style>
    html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <article>
            <div style="justify-content: center; display: flex; overflow-x: hidden;">
                @Body
            </div>
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>